<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="SuiteTestMovement" verbose="1" >
    <test name="Playfield">
        <groups>
            <run>
                <include name="Playfield"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.prejap.tetris.game.TestPlayfield"/>
        </classes>
    </test>
    <test name="HumanPlayer">
        <groups>
            <run>
                <include name="HumanPlayer"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.prejap.tetris.player.TestHumanPlayer"/>
        </classes>
    </test>
    <test verbose="2" name="Tetris tests">
        <groups>
            <define name="all">
                <include name="blockShapes"/>
                <include name="blocks"/>
                <include name="jar"/>
            </define>
            <run>
                <include name="blockShapes"/>
                <include name="blocks"/>
                <include name="jar"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.prejap.tetris.block.OBlockTest"/>
            <class name="com.epam.prejap.tetris.block.TBlockTest"/>
            <class name="com.epam.prejap.tetris.JARArchiveIT"/>
        </classes>
    </test>
</suite>
